# Environment Configuration
ENV=development

# Server Configuration
# For local ComfyUI server use: 127.0.0.1
# For remote ComfyUI server use the server's address/IP, e.g.: remote-server.example.com or 192.168.1.100
APP_SERVER_HOST=127.0.0.1
APP_SERVER_PORT=8188

# Model Configuration
APP_MODEL_TORCH_DEVICE=cuda
APP_MODEL_TORCH_DTYPE=float16

# Paths Configuration
APP_PATHS_PROMPT_MEDIA=prompt.yaml
APP_PATHS_OUTPUT_DIR=generated_images

# Media Configuration
PROMPT_MEDIA_BASE_DIR=media
# Uncomment and modify to use custom media paths
#PROMPT_MEDIA_BASE_DIR=/path/to/your/media/directory

# Logging Configuration
APP_LOGGING_LEVEL=INFO
APP_LOGGING_FILE=app.log

# API Configuration
APP_API_TIMEOUT=30
